# Server Monitor - Environment Configuration
# Copy this file to .env and update with your production values
# 
# SECURITY WARNING: Never commit .env to version control!
# The .env file contains sensitive secrets and should be kept secure.

# =================== REQUIRED PRODUCTION SECRETS ===================
# Generate these using: python3 -c "import secrets; print(secrets.token_urlsafe(32))"

# JWT Token Secret (32+ characters, REQUIRED for production)
# Used to sign authentication tokens
JWT_SECRET=your-super-secure-jwt-secret-here-32plus-characters

# Encryption Key (24+ characters, REQUIRED for production)
# Used to encrypt sensitive data like SSH passwords
ENCRYPTION_KEY=your-encryption-key-24plus-characters

# SSH Key Vault Master Key (32+ characters, REQUIRED for SSH)
# Used to encrypt SSH private keys and passphrases
KEY_VAULT_MASTER_KEY=your-key-vault-master-key-32plus-characters

# =================== APPLICATION SETTINGS ===================

# Environment (development, staging, production)
ENVIRONMENT=production

# Debug Mode (MUST be false in production)
DEBUG=false

# JWT Token Expiration (hours)
JWT_EXPIRATION_HOURS=24

# Database path (relative to backend/ directory)
DATABASE_PATH=../data/servers.db

# =================== NETWORK & SECURITY ===================

# CORS Allowed Origins (comma-separated, NO wildcards in production)
# Example: https://monitor.example.com,https://mon.example.com
ALLOWED_FRONTEND_DOMAINS=https://your-domain.com

# Rate Limiting (requests per minute)
RATE_LIMIT_ENABLED=true
API_RATE_LIMIT=100
LOGIN_RATE_LIMIT=5

# =================== INTEGRATIONS ===================

# Email Alerts (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=alerts@your-domain.com
SMTP_FROM_NAME=Server Monitor

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Telegram Bot
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
TELEGRAM_CHAT_ID=-1234567890123

# =================== OPTIONAL FEATURES ===================

# Plugin System
PLUGIN_SYSTEM_ENABLED=false
PLUGIN_ALLOWLIST=webhook

# Audit Log Retention (days)
AUDIT_RETENTION_DAYS=90

# Cache TTL (seconds)
CACHE_TTL=300

# SSH Connection Timeout (seconds)
SSH_TIMEOUT=30

# Task Timeout (seconds)
TASK_TIMEOUT=300

# WebSocket Ping Interval (seconds)
WS_PING_INTERVAL=30

# =================== DEVELOPMENT ONLY ===================
# These should NOT be set in production

# CI Mode (disables rate limiting for tests)
# CI=false

# Test Base URL (for integration tests)
# TEST_BASE_URL=http://localhost:9083

# Force HTTPS (set to false only in development)
# FORCE_HTTPS=true

# =================== CUSTOM DOMAIN ===================
# For custom domain deployments

# Domain name
# DOMAIN=monitor.example.com

# SSL Certificate paths (if using custom certs)
# SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
# SSL_KEY_PATH=/etc/ssl/private/your-key.pem

# Let's Encrypt email (for automatic SSL)
# LETSENCRYPT_EMAIL=admin@your-domain.com
